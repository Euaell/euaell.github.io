</section>

<script>
  // Rotating skills animation
  const skills = ['React', 'Next.js', 'TypeScript', 'Python', 'FastAPI', 'AI/ML'];
  let currentIndex = 0;
  const skillElement = document.getElementById('rotating-skill');

  function rotateSkill() {
    if (skillElement) {
      // Fade out
      skillElement.style.opacity = '0';
      skillElement.style.transform = 'translateY(10px)';

      setTimeout(() => {
        // Change text
        currentIndex = (currentIndex + 1) % skills.length;
        skillElement.textContent = skills[currentIndex];

        // Fade in
        skillElement.style.opacity = '1';
        skillElement.style.transform = 'translateY(0)';
      }, 250);
    }
  }

  // Initialize and start rotation
  setInterval(rotateSkill, 2000);

  // Set initial skill
  if (skillElement) {
    skillElement.textContent = skills[0];
  }
</script>

<style>
  /* Hero section animations */
  .hero-greeting {
    animation: fadeUp 0.6s ease-out;
  }

  .hero-title {
    animation: fadeUp 0.8s ease-out 0.2s backwards;
  }

  .hero-subtitle {
    animation: fadeUp 0.8s ease-out 0.4s backwards;
  }

  .hero-description {
    animation: fadeUp 0.8s ease-out 0.6s backwards;
  }

  .hero-cta {
    animation: fadeUp 0.8s ease-out 0.8s backwards;
  }

  .hero-social {
    animation: fadeUp 0.8s ease-out 1s backwards;
  }

  /* Rotating skill transition */
  #rotating-skill {
    transition: opacity 0.25s ease, transform 0.25s ease;
  }

  /* Floating elements */
  .float-item {
    animation: float 6s ease-in-out infinite;
  }
</style>
