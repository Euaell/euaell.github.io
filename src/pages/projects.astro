---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/ui/Navigation.astro';
import FloatingResumeButton from '@/components/ui/FloatingResumeButton.astro';
import { projectsData } from '@/data/projects';
import ProjectFilter from '@/components/ui/ProjectFilter';

const allProjects = projectsData;
const allTech = [...new Set(projectsData.flatMap((p) => p.tags))].slice(0, 12);
---

<Layout
  title="Projects - Euael M. Eshete"
  description="Explore my portfolio of web applications, AI solutions, and software projects built with React, Next.js, Python, and more."
>
  <Navigation />
  <FloatingResumeButton />

  <main class="pt-24 md:pt-28">
    <section class="py-16 md:py-20">
      <div class="container-custom">
        <div class="text-center mb-12 md:mb-16 max-w-3xl mx-auto">
          <p class="text-xs uppercase tracking-[0.4em] text-white/50 mb-3">Archive</p>
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-semibold font-display mb-4">
            All Projects
          </h1>
          <p class="text-base md:text-lg text-white/70 px-4">
            A comprehensive collection of my work, from web applications to AI-powered solutions. Filter by technology to find specific projects.
          </p>
        </div>

        <ProjectFilter client:visible projects={allProjects} technologies={allTech} />

        <div class="mt-12 text-center">
          <a href="/#work" class="inline-flex items-center gap-2 btn-secondary px-8 py-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"
              />
            </svg>
            Back to home
          </a>
        </div>
      </div>
    </section>
  </main>

  <footer class="py-8 border-t border-white/10">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row items-center justify-center md:justify-between gap-4 text-xs uppercase tracking-[0.2em] text-white/50">
        <p>
          (c) {new Date().getFullYear()} Euael M. Eshete. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="/#home" class="hover:text-white transition-colors">Home</a>
          <a
            href="https://github.com/euaell"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-white transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://www.linkedin.com/in/euael-eshete"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-white transition-colors"
          >
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
