---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/ui/Navigation.astro';
import FloatingResumeButton from '@/components/ui/FloatingResumeButton.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import AboutSection from '@/components/sections/AboutSection.astro';
import WorkSection from '@/components/sections/WorkSection.astro';
import ContactSection from '@/components/sections/ContactSection.astro';
import StructuredData from '@/components/seo/StructuredData.astro';
---

<Layout
  title="Euael M. Eshete - Full Stack Developer & AI Engineer"
  description="Full Stack Developer & AI Engineer specializing in React, Next.js, Python, TypeScript, and machine learning. Building innovative web applications and AI solutions."
>
  <Fragment slot="head">
    <StructuredData />
  </Fragment>

  <Navigation />
  <FloatingResumeButton />

  <main>
    <HeroSection />
    <AboutSection />
    <WorkSection />
    <ContactSection />
  </main>

  <footer class="py-8 border-t border-white/10">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-xs uppercase tracking-[0.2em] text-white/50">
        <p>
          (c) {new Date().getFullYear()} Euael M. Eshete. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="#home" class="hover:text-white transition-colors">Back to top</a>
          <a
            href="https://github.com/euaell"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-white transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://www.linkedin.com/in/euael-eshete"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-white transition-colors"
          >
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
